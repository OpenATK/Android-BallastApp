<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
   <!-- <TextView android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:text="SECONDARY ACTIVITY"/>
    <EditText android:id="@+id/txtSecondary"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnSecondary"
            android:text="Click To Return to Main Activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>-->

<!-- Screen Header: Select Tractor Type -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Implement Type: "
        android:textColor="@color/text_rgb"
        android:padding="12px"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
<!-- Towable Implement Selection: (onClick main.xml) -->
    <TextView
        android:id="@+id/tv_tow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Towable"
        android:textColor="@color/text_rgb"
        android:paddingBottom="8px" 
        android:textAppearance="?android:attr/textAppearanceMedium" />
		
    <ImageButton
        android:id="@+id/ib_tow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/tow" />
    
<!-- Semi-Mounted Implement Selection: (onClick main.xml) -->
    <TextView
        android:id="@+id/tv_semimnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        	android:text="Semi-Mounted"
        	android:textColor="@color/text_rgb"
        android:paddingTop="8px"
        android:paddingBottom="8px" 
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/ib_semimnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/semimnt" />
    
<!-- Fully-Mounted Implement: (onClick main.xml) -->
    <TextView
        android:id="@+id/tv_fullmnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        	android:text="Fully-Mounted"
        	android:textColor="@color/text_rgb"
        android:paddingTop="8px"
        android:paddingBottom="8px"
        
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageButton
        android:id="@+id/ib_fullmnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/fullmnt" />


<!--  Control Buttons on the bottom of screen -->

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.20" >
        
<!-- Exit App: (onClick cancel) -->
        <ImageButton
            android:id="@+id/ib_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:src="@drawable/d_exit_up" />
  
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            
<!-- Return to previous: (onClick return) -->
            
<!-- Information: (onClick information.xml) -->
            <ImageButton
                android:id="@+id/ib_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/d_info_up" />

            <ImageButton
                android:id="@+id/ib_go_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/ib_info"
                android:src="@drawable/go_back" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>